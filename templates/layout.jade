doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=locals.url+'/css/bootstrap-darkly.min.css')
      link(rel='stylesheet', href=locals.url+'/css/modern-business.css')
      
  body.bodyclass
  
    div.navbar.navbar-default.navbar-fixed-top(role="navigation")
      div.container
        div.navbar-header
          button.navbar-toggle(data-toggle="collapse", data-target="#navbar-main")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#{locals.url}/")= locals.name
          
        div.collapse.navbar-collapse#navbar-main
          ul.nav.navbar-nav.navbar-right
            li
              a(href="#{locals.url}/about.html") About
             li
              a(href="#{locals.url}/services.html") Services
            li
              a(href="#{locals.url}/contact.html") Contact
            li
              a(href="#{locals.url}/news.html") News
            li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown") Menu
                b.caret
              ul.dropdown-menu
                li
                  a(href="#") Item 1
                  a(href="#") Item 2
                  a(href="#") Item 3
                  a(href="#") Item 4
                  
    block header
      
    div.container
      block content
          
      footer
        div.row
          div.col-lg-12
            p
              hr
              !=contents['footer.md'].html
              
    script(src=locals.url+'/js/jquery.min.js')
    script(src=locals.url+'/js/bootstrap.min.js')
    block script