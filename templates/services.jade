extends layout

block prepend title
  | #{ page.title + " - "}
  
block content
  div.row
    div.col-lg-12
      h1= page.title
      
      div.row
        div.col-lg-12
          h2.page-header Main services
        
        - var services = env.helpers.getServices(contents)
          each service in services
            div.col-md-3.col-sm-6
              div.panel.panel-default.text-center
                div.panel-heading
                  img.img-responsive(src=service.metadata.image)
                div.panel-body
                  h4= service.title
                  p
                    | !{ typogr(service.html).typogrify() }
                
      div.row
        div.col-lg-12
          h2.page-header All projects          
          
          - var projects = env.helpers.getProjects(contents)
          - var numProject = 0
          - var j = 0
          - var nbProjects = projects.length
          
          div.row
            each project in projects
              div.col-md-4.col-sm-4
                div.media
                  div.pull-left
                    img(src=project.metadata.image)
                  div.media-body
                    h4.media-heading= project.title
                    p
                      | !{ typogr(project.html).typogrify() }
      
      div.row
        div.col-lg-12
          h2.page-header Details
          | !{ typogr(page.html).typogrify() }
